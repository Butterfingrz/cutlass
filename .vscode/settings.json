{
  "cmake.sourceDirectory": "${workspaceFolder}",
  "cmake.generator": "Ninja",
  "cmake.useCMakePresets": "always",
  "cmake.configurePreset": "hopper-release",
  "cmake.buildPreset": "hopper-release",
  "cmake.configureOnOpen": false,
  "cmake.options.statusBarVisibility": "visible",
  "files.associations": {
    "*.cu": "cpp",
    "*.cuh": "cuda-cpp",
    "cassert": "cpp",
    "cstdio": "cpp",
    "iomanip": "cpp",
    "cstdint": "cpp",
    "cmath": "cpp",
    "type_traits": "cpp",
    "typeindex": "cpp"
  }
}
